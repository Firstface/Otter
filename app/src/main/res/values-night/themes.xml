<resources>
    <!-- Base application theme for dark mode. -->
    <style name="Base.Theme.Otter" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/neon_green</item>
        <item name="colorPrimaryVariant">@color/neon_green</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/neon_green</item>
        <item name="colorSecondaryVariant">@color/neon_green</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <!-- 关键点 2: 设置状态栏背景为白色，与你的首页背景融合 -->
        <item name="android:statusBarColor">@color/black</item>

        <!-- 关键点 3: 设置状态栏图标为深色 (黑色) -->
        <!-- 因为背景是白色，如果是白色图标就看不见了，所以必须设为 true -->
        <item name="android:windowLightStatusBar">false</item>

        <!-- Optional: 去掉窗口背景，防止过渡时闪烁 -->
        <item name="android:windowBackground">@color/black</item>
    </style>
</resources>